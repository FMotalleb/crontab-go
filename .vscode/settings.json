{
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "[go.mod]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    // gopls
    "go.useLanguageServer": true,
    "gopls": {
        "formatting.local": "github.com/FMotalleb/crontab-go",
        "formatting.gofumpt": true
    },
    // golangci-lint  
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast"
    ],
    "[go][go.mod]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "cSpell.words": [
        "bodyclose",
        "dupl",
        "errcheck",
        "exportloopref",
        "funlen",
        "gochecknoinits",
        "goconst",
        "gocritic",
        "gocyclo",
        "gofumpt",
        "goimports",
        "goprintffuncname",
        "gosec",
        "gosimple",
        "govet",
        "ineffassign",
        "nakedret",
        "noctx",
        "nolint",
        "rowserrcheck",
        "sqlclosecheck",
        "staticcheck",
        "stylecheck",
        "typecheck",
        "unconvert",
        "unparam"
    ],
    "yaml.schemas": {
        "./schema.json": [
            "config.example.yaml",
            "config.yaml"
        ],
    }
}